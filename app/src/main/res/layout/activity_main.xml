<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#18FFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Type in Gondi"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="#000000"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mediaSwaraCardView"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#FFF59D">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Media Swara"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="#000000"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#FFFF00">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Library"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="#000000"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#CCFF90">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="History"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="#000000"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>